markup=pango

[ip]
command=/usr/bin/curl -s https://am.i.mullvad.net/ip
interval=once
color=#f5e042
label=<b>IP:</b> 
signal=8

[separator]

[volume]
command=/usr/bin/pactl get-sink-volume 0 | grep -oE '[0-9]+%'
color=#f010ff
interval=once
label=<b>Vol:</b>
signal=10

[separator]

[temperature]
command=$XDG_CONFIG_HOME/i3blocks/tools/cpu_temperature.sh
interval=5
color=#f01010
label=<b>TEMP:</b> 

[separator]

[brightness]
command=/usr/bin/light -G
interval=once
color=#a0a0ff
label=<b>LGHT:</b> 
signal=10

[separator]

[battery]
command=$XDG_CONFIG_HOME/i3blocks/tools/battery_percentage.sh
interval=2
color=#10cc10
label=<b>PWR:</b>

[separator]

[time]
TZ=Europe/Athens
command=/bin/date '+%I:%M %d/%m %A'
interval=2
color=#fdb49f
label=<span color="#ffb86c">ï€— </span>

[separator]

[caps-lock]
command=$XDG_CONFIG_HOME/i3blocks/tools/caps-lock.sh
interval=once
signal=10

[num-lock]
